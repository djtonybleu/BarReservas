# Production Environment Variables

# API Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://barreservas.vercel.app

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://postgres:password@host:port/database
DB_HOST=containers-us-west-xxx.railway.app
DB_PORT=5432
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-railway-db-password

# Security (Generate new keys for production)
JWT_SECRET=your-production-jwt-secret-key-here
ENCRYPTION_KEY=your-32-byte-production-encryption-key
SESSION_SECRET=your-production-session-secret

# Redis (Railway Redis)
REDIS_HOST=containers-us-west-xxx.railway.app
REDIS_PORT=6379
REDIS_PASSWORD=your-railway-redis-password

# Email Alerts
ALERT_EMAIL_USER=alerts@barreservas.com
ALERT_EMAIL_PASS=your-gmail-app-password
ALERT_EMAIL_TO=admin@barreservas.com

# Monitoring
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100